# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL="postgresql://pricey:pricey_dev_password@localhost:5432/pricey"

# Redis Configuration (optional for MVP)
REDIS_URL="redis://localhost:6379"

# API Gateway Configuration
NODE_ENV="development"
PORT="3001"
HOST="0.0.0.0"
LOG_LEVEL="info"

# CORS Configuration
CORS_ORIGIN="*"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="60000"

# MinIO/S3 Configuration (for receipt image storage)
S3_ENDPOINT="localhost"
S3_PORT="9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_USE_SSL="false"
S3_BUCKET="pricey-receipts"

# OCR Service Configuration
OCR_CONCURRENCY="5"
OCR_TIMEOUT="30000"

# LLM Configuration (Ollama)
# Model to auto-download in Docker: llama3.2:1b, llama3.2:3b, mistral:7b, phi3:mini
OLLAMA_MODEL="llama3.2:3b"
LLM_PROVIDER="ollama"
LLM_BASE_URL="http://localhost:11434"
LLM_MODEL="llama3.2:3b"
LLM_TIMEOUT="60000"
LLM_TEMPERATURE="0.1"

# Production PostgreSQL (for docker-compose.prod.yml)
POSTGRES_USER="pricey"
POSTGRES_PASSWORD="CHANGE_ME_IN_PRODUCTION"
POSTGRES_DB="pricey"
POSTGRES_PORT="5432"

# Production Redis (for docker-compose.prod.yml)
REDIS_PASSWORD="CHANGE_ME_IN_PRODUCTION"
REDIS_PORT="6379"

# Production MinIO (for docker-compose.prod.yml)
MINIO_ROOT_USER="CHANGE_ME_IN_PRODUCTION"
MINIO_ROOT_PASSWORD="CHANGE_ME_IN_PRODUCTION"

# API Production
API_PORT="3001"
