# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL="postgresql://pricy:pricy_dev_password@localhost:5432/pricy"

# Redis Configuration (optional for MVP)
REDIS_URL="redis://localhost:6379"

# API Gateway Configuration
NODE_ENV="development"
PORT="3001"
HOST="0.0.0.0"
LOG_LEVEL="info"

# CORS Configuration
CORS_ORIGIN="*"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="60000"

# MinIO/S3 Configuration (for receipt image storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_USE_SSL="false"
MINIO_BUCKET_NAME="pricy-receipts"

# Production PostgreSQL (for docker-compose.prod.yml)
POSTGRES_USER="pricy"
POSTGRES_PASSWORD="CHANGE_ME_IN_PRODUCTION"
POSTGRES_DB="pricy"
POSTGRES_PORT="5432"

# Production Redis (for docker-compose.prod.yml)
REDIS_PASSWORD="CHANGE_ME_IN_PRODUCTION"
REDIS_PORT="6379"

# Production MinIO (for docker-compose.prod.yml)
MINIO_ROOT_USER="CHANGE_ME_IN_PRODUCTION"
MINIO_ROOT_PASSWORD="CHANGE_ME_IN_PRODUCTION"

# API Production
API_PORT="3001"
