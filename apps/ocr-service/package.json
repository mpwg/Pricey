{
  "name": "@pricey/ocr-service",
  "version": "0.1.0",
  "private": true,
  "description": "OCR service for receipt processing",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@pricey/database": "workspace:*",
    "@pricey/types": "workspace:*",
    "bullmq": "^5.61.2",
    "chrono-node": "^2.9.0",
    "date-fns": "^4.1.0",
    "ioredis": "^5.8.2",
    "minio": "^8.0.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "sharp": "^0.34.4",
    "tesseract.js": "^6.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
