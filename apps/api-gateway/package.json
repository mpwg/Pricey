{
  "name": "@pricey/api-gateway",
  "version": "0.1.0",
  "private": true,
  "description": "API Gateway for Pricey",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=../../.env.local src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:load": "tsx scripts/load-test.ts",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.920.0",
    "@bull-board/api": "^6.14.0",
    "@bull-board/fastify": "^6.14.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@pricey/database": "workspace:*",
    "@pricey/types": "workspace:*",
    "bullmq": "^5.62.1",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.2",
    "minio": "^8.0.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "sharp": "^0.34.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  }
}
