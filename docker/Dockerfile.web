FROM node:24-alpine AS base
RUN corepack enable && corepack prepare pnpm@10.20.0 --activate

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY apps/web/package.json ./apps/web/
COPY packages/types/package.json ./packages/types/
COPY packages/ui/package.json ./packages/ui/
RUN pnpm install --frozen-lockfile --filter @pricey/web...

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app
# Copy workspace configuration first
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
# Copy all source code (needed for workspace dependencies)
COPY . .
# Copy node_modules from deps stage
# This must come after source code so workspace symlinks resolve correctly
COPY --from=deps /app/node_modules ./node_modules

# Build shared packages first
RUN pnpm --filter @pricey/types build
RUN pnpm --filter @pricey/ui build

# Build web app
RUN pnpm --filter @pricey/web build

# Production image
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy built application
COPY --from=builder --chown=nextjs:nodejs /app/apps/web/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=builder --chown=nextjs:nodejs /app/apps/web/public ./apps/web/public

USER nextjs

EXPOSE 3000

LABEL org.opencontainers.image.source="https://github.com/mpwg/Pricey"
LABEL org.opencontainers.image.description="Pricey Web Frontend - AGPL-3.0 Licensed"
LABEL org.opencontainers.image.licenses="AGPL-3.0"

CMD ["node", "apps/web/server.js"]
